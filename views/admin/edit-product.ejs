<%- include('../partials/head.ejs') %> 
<link rel="stylesheet" href="/css/add-product.css" />
</head>
<%- include('../partials/navigation.ejs')
%>

<main>
  <form action="<%= (locals.product ? `/admin/products/edit/${product._id}` : '/admin/add-product') %>" method="post" class="product-form">
    <h2><%= (locals.product ? 'Edit' : 'Add') %> product</h2>
    <div class="product-form__control">
      <label for="title">Title</label>
      <input
        type="text"
        name="title"
        id="title"
        <% if (locals.product) { %> 
          value="<%= product.title %>"
        <% } %> 
      />
    </div>
    <div class="product-form__control">
      <label for="iamgeUrl">Image URL</label>
      <input
        type="text"
        name="imageUrl"
        id="imageUrl"
        <% if (locals.product) { %> 
          value="<%= product.imageUrl %>"
        <% } %> 
      />
    </div>
    <div class="product-form__control">
      <label for="price">Price</label>
      <input
        type="number"
        name="price"
        id="price"
        step="0.01"
        <% if (locals.product) { %> 
          value="<%=(product.price+"") %>"
        <% } %> 
      />
    </div>
    <div class="product-form__control">
      <label for="description">Description</label>
      <textarea
        name="description"
        id="description"
        rows="5"><% if (locals.product) { %><%= product.description %><% } %></textarea>
    </div>
    <button class="btn" type="submit"><%= (locals.product ? 'Save' : 'Add') %></button>
  </form>
</main>
<%- include('../partials/foot.ejs')%>
