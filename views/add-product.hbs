
<main>
    <form action="/admin/add-product" method="post" class="product-form">
      <h2>Add a product</h2>
      <div class="product-form__control">
        <label for="title">Title</label>
        <input
          type="text"
          name="title"
          id="title"
          placeholder="Please enter a product title"
        />
      </div>
      <button type="submit">Add product</button>
    </form>
</main>
