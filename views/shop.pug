extends layouts/main-layout.pug

block styles
    link(rel="stylesheet",href="/css/shop.css")

block content
  main.main-container 
    h2 My products 
    if products.length > 0
      ul.grid
        each product in products 
          li.card.product-item 
            header.card__header
              h3.product__title #{product.title}
            .card-image
              img(src="https://picsum.photos/536/354",alt="product")
            .card__content 
              h2.product__price $23.99
              p.product__desc A very interesting product that is of the best quality 
            .card__actions 
              button.btn Add to Cart
    else 
      p No products found